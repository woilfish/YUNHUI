<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/AppTheThemeColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extract_top_hite"
            android:textColor="@color/color_959697"
            android:textSize="@dimen/font_size_normal"/>
        <EditText
            android:id="@+id/extractnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="@string/exchange_hite_num"
            android:textColor="@color/white"
            android:textColorHint="@color/color_646565"
            android:textSize="@dimen/font_size_small"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:theme="@style/MyEditText"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_20">
        <Button
            android:id="@+id/extractAllNum"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80"
            android:background="@drawable/bg_roundedrectangle"
            android:text="@string/extract_all_num"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extract_wallet"
            android:textColor="@color/color_959697"
            android:textSize="@dimen/font_size_normal"/>
        <EditText
            android:id="@+id/extractwallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/color_646565"
            android:textSize="@dimen/font_size_small"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:theme="@style/MyEditText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extract_SMS"
            android:textColor="@color/color_959697"
            android:textSize="@dimen/font_size_normal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/extractSMS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/color_646565"
                android:textSize="@dimen/font_size_small"
                android:textCursorDrawable="@drawable/bg_cursor"
                android:theme="@style/MyEditText"/>
            <Button
                android:id="@+id/extractSendSMS"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_80"
                android:layout_weight="1"
                android:text="获取验证码"
                android:textSize="@dimen/font_size_small"
                android:background="@drawable/bg_roundedrectangle"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_40">
        <Button
            android:id="@+id/extractcancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80"
            android:text="@string/exchange_hite_cancle"
            android:background="@drawable/bg_roundedrectangle"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dimen_40"/>
        <Button
            android:id="@+id/extractconfirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80"
            android:text="@string/extract__hite_confirm"
            android:background="@drawable/bg_roundedrectangle"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>