<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.pengmin.zxing.ScannerView
            android:id="@+id/scanner_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#01000000">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#01000000"
                android:layout_marginTop="22dp">

                <ImageButton
                    android:id="@+id/scannerBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/nav_back"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫描条码"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/font_size_large"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/titlehitescanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_80"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用手机扫描邀请码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="以输入S/N编号"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hitescanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_80"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/titleHiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_normal"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>