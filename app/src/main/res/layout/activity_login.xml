<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppTheThemeColor">

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="@dimen/dimen_256"
        android:layout_height="@dimen/dimen_256"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_120"
        android:src="@mipmap/icon_log"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageIcon"
        android:layout_marginTop="@dimen/dimen_80"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_hite"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_12"
            android:textSize="@dimen/font_size_normal"/>

        <com.yunhui.component.edittext.ClearEditTextLogin
            android:id="@+id/login_phonenum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="@string/login_phonenum"
            android:textColor="@color/white"
            android:textColorHint="@color/color_646565"
            android:textSize="@dimen/font_size_small"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:theme="@style/MyEditText"/>

        <com.yunhui.component.edittext.ShowPasswordEditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:drawablePadding="10dp"
            android:hint="@string/login_password"
            android:textColor="@color/white"
            android:textColorHint="@color/color_646565"
            android:textSize="@dimen/font_size_small"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:theme="@style/MyEditText"/>

        <Button
            android:id="@+id/login_enter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_88"
            android:text="@string/login_login"
            android:background="@drawable/bg_roundedrectangle"
            android:textSize="@dimen/font_size_normal"
            android:layout_marginTop="@dimen/dimen_20"
            android:textColor="@color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_24"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/login_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_regist"
            android:layout_marginLeft="@dimen/dimen_12"
            android:textColor="@color/color_EE9707"
            android:background="#00000000"/>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_24"
            android:background="@drawable/bg_roundedrectangle"/>
        <Button
            android:id="@+id/login_forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_forgetpassword"
            android:textColor="@color/color_EE9707"
            android:background="#00000000"/>
    </LinearLayout>
</RelativeLayout>