<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppTheThemeColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/retrievepasswordvalidation"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_80"
                android:layout_weight="4"
                android:background="@null"
                android:hint="@string/retrieve_password_validation"/>
            <view
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <Button
                android:id="@+id/retrievepasswordsendvalidation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/retrieve_password_send_validation"/>
        </LinearLayout>
        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/retrievepasswordpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:background="@null"
                android:hint="@string/retrieve_password_password"/>
        </LinearLayout>
        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/retrievepasswordconfirmpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:background="@null"
                android:hint="@string/retrieve_password_confirm_password"/>
        </LinearLayout>
        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_20">
        <Button
            android:id="@+id/retrievepassworddone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:text="@string/retrieve_password_done"/>
    </LinearLayout>

</LinearLayout>