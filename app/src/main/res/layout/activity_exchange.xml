<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/AppTheThemeColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <com.yunhui.component.image.CircleImageView
            android:id="@+id/exchangeuserphoto"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/exchangeuserphonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13633491655"/>
            <TextView
                android:id="@+id/exchangeusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无敌寂寞"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/exchangehitetop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_hite_top"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/exchangehitenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exchange_hite_num"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/exchangepay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="共兑换：XXXXBTC"/>
        <Button
            android:id="@+id/exchangehiteall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/exchange_hite_all"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/exchangeformalities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的钱包地址（手续费0.0005BTC）"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/exchangeadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_hite_password"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/exchangepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/exchangecancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_hite_cancle"/>
        <Button
            android:id="@+id/exchangeconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_hite_confirm"/>
    </LinearLayout>


</LinearLayout>