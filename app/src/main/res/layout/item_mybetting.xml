<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2b2e34"
    android:padding="@dimen/dimen_10"
    android:minHeight="@dimen/dimen_200">

    <TextView
        android:id="@+id/myBettingdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_959697"
        android:textSize="@dimen/font_size_normal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/myBettinghite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_959697"
        android:textSize="@dimen/font_size_normal"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myBettingResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_959697"
            android:textSize="@dimen/font_size_normal" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/l_right_arrow"
            android:layout_marginLeft="@dimen/dimen_10"/>
    </LinearLayout>
</RelativeLayout>