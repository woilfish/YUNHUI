<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppTheThemeColor"
    android:padding="@dimen/dimen_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80"
        android:background="@color/color_4F5051">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="投注方案"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/color_EE9707"
            android:padding="@dimen/dimen_10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="投注金额"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_959697"
                android:padding="@dimen/dimen_10"/>
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_959697"
                android:padding="@dimen/dimen_10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="过关方式"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_959697"
                android:padding="@dimen/dimen_10"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_959697"
                android:padding="@dimen/dimen_10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="订单编号"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_959697"
                android:padding="@dimen/dimen_10"/>
            <TextView
                android:id="@+id/billNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_959697"
                android:padding="@dimen/dimen_10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="中奖情况"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_959697"
                android:padding="@dimen/dimen_10"/>
            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_959697"
                android:padding="@dimen/dimen_10"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80"
        android:background="@color/color_4F5051"
        android:layout_marginTop="@dimen/dimen_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="投注详情"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/color_EE9707"
            android:padding="@dimen/dimen_10"/>
    </LinearLayout>

    <com.yunhui.component.refreshlistview.RefreshListView
        android:id="@+id/mtBettingInfoList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:divider="@color/l_gray"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_10"
        android:visibility="visible"/>


</LinearLayout>